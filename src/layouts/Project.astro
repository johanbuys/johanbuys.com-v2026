---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, pubDate, heroImage, tags, url, techStack, featured } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.meta {
				margin-bottom: 2em;
				padding-bottom: 1em;
				border-bottom: 1px solid rgb(var(--gray-light));
			}
			.meta-section {
				margin-bottom: 1em;
			}
			.meta-section h3 {
				margin: 0 0 0.5em 0;
				font-size: 0.9em;
				text-transform: uppercase;
				color: rgb(var(--gray));
				letter-spacing: 0.05em;
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.tag {
				background: rgb(var(--accent));
				color: white;
				padding: 0.25em 0.75em;
				border-radius: 4px;
				font-size: 0.85em;
				font-weight: 500;
			}
			.tech-stack {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.tech-item {
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				padding: 0.25em 0.75em;
				border-radius: 4px;
				font-size: 0.85em;
			}
			.external-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5em;
				color: rgb(var(--accent));
				text-decoration: none;
				font-weight: 500;
			}
			.external-link:hover {
				text-decoration: underline;
			}
			.external-link::after {
				content: 'â†—';
				font-size: 1.2em;
			}
			.featured-badge {
				display: inline-block;
				background: rgb(var(--accent));
				color: white;
				padding: 0.25em 0.75em;
				border-radius: 4px;
				font-size: 0.85em;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						<h1>{title}</h1>
						{featured && <div class="featured-badge">Featured</div>}
						<hr />
					</div>
					<div class="meta">
						{url && (
							<div class="meta-section">
								<h3>Project Link</h3>
								<a href={url} class="external-link" target="_blank" rel="noopener noreferrer">
									Visit Project
								</a>
							</div>
						)}
						{tags.length > 0 && (
							<div class="meta-section">
								<h3>Tags</h3>
								<ul class="tags">
									{tags.map((tag) => (
										<li class="tag">{tag}</li>
									))}
								</ul>
							</div>
						)}
						{techStack.length > 0 && (
							<div class="meta-section">
								<h3>Tech Stack</h3>
								<ul class="tech-stack">
									{techStack.map((tech) => (
										<li class="tech-item">{tech}</li>
									))}
								</ul>
							</div>
						)}
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
