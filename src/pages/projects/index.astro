---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const allProjects = (await getCollection("projects")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get only the latest featured project
const featuredProject = allProjects.find((project) => project.data.featured);
// All other projects (including non-featured ones and additional featured ones)
const regularProjects = allProjects.filter(
  (project) => project !== featuredProject
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Projects - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      /* Main layout */
      main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 3em 1em;
      }

      /* Section styling */
      section {
        margin-bottom: 4rem;
      }

      section:last-child {
        margin-bottom: 2rem;
      }

      .section-title {
        margin-bottom: 2rem;
        color: rgb(var(--black));
        font-size: 1.953em;
      }

      /* List reset */
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      ul li * {
        text-decoration: none;
      }

      /* Featured Project - Vertical Layout */
      .featured-project {
        background: linear-gradient(
          135deg,
          rgba(var(--gray-light), 0.3),
          rgba(var(--accent), 0.05)
        );
        border: 2px solid rgba(var(--accent), 0.2);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .featured-project:hover {
        border-color: rgba(var(--accent), 0.5);
        box-shadow: var(--box-shadow);
        transform: translateY(-2px);
      }

      .featured-project > a {
        display: flex;
        flex-direction: column;
      }

      .featured-project .project-image {
        width: 100%;
        overflow: hidden;
      }

      .featured-project .project-image img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 0;
        transition: transform 0.3s ease;
      }

      .featured-project:hover .project-image img {
        transform: scale(1.02);
      }

      .featured-project .project-content {
        padding: 2rem;
      }

      .featured-project .title {
        font-size: 2.441em;
        margin: 0.5rem 0 1rem 0;
        color: rgb(var(--black));
        line-height: 1.2;
      }

      .featured-project .description {
        font-size: 1.1em;
        line-height: 1.6;
        color: rgb(var(--gray-dark));
        margin-bottom: 1.5rem;
      }

      /* Regular Projects - Horizontal Layout */
      section:last-child ul {
        gap: 1.5rem;
      }

      section:last-child li {
        border: 1px solid rgb(var(--gray-light));
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.2s ease;
      }

      section:last-child li:hover {
        border-color: rgb(var(--accent));
        box-shadow: 0 4px 12px rgba(var(--gray), 0.15);
        transform: translateY(-1px);
      }

      section:last-child li > a {
        display: flex;
        flex-direction: row;
        align-items: stretch;
        min-height: 200px;
      }

      section:last-child .project-image {
        flex-shrink: 0;
        width: 320px;
        overflow: hidden;
        display: flex;
        align-items: center;
        background: rgb(var(--gray-light));
      }

      section:last-child .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 0;
        transition: transform 0.3s ease;
      }

      section:last-child li:hover .project-image img {
        transform: scale(1.05);
      }

      section:last-child .project-content {
        flex-grow: 1;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
      }

      section:last-child .title {
        font-size: 1.563em;
        margin: 0.5rem 0 0.75rem 0;
        color: rgb(var(--black));
        line-height: 1.3;
      }

      section:last-child .description {
        color: rgb(var(--gray-dark));
        line-height: 1.5;
        margin-bottom: 1rem;
        flex-grow: 1;
      }

      /* Common elements */
      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.9em;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .project-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s ease;
      }

      li:hover .title {
        color: rgb(var(--accent));
      }

      .external-link-icon {
        font-size: 0.7em;
        opacity: 0.6;
      }

      /* Featured badge */
      .featured-badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--accent), var(--accent-dark));
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 4px rgba(var(--accent), 0.3);
      }

      /* Tags */
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .tag {
        display: inline-block;
        background: rgb(var(--gray-light));
        color: rgb(var(--gray-dark));
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 500;
        transition: all 0.2s ease;
      }

      li:hover .tag {
        background: rgba(var(--accent), 0.1);
        color: var(--accent);
      }

      /* Tech stack */
      .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .tech-item {
        display: inline-block;
        background: white;
        border: 1px solid rgb(var(--gray-light));
        color: rgb(var(--gray-dark));
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        font-family: monospace;
        transition: all 0.2s ease;
      }

      li:hover .tech-item {
        border-color: var(--accent);
        color: var(--accent);
        background: rgba(var(--accent), 0.05);
      }

      /* Mobile responsive */
      @media (max-width: 720px) {
        main {
          padding: 1.5em 1em;
        }

        .section-title {
          font-size: 1.563em;
          margin-bottom: 1.5rem;
        }

        section {
          margin-bottom: 3rem;
        }

        ul {
          gap: 1.5rem;
        }

        /* Featured project mobile */
        .featured-project .project-content {
          padding: 1.5rem;
        }

        .featured-project .title {
          font-size: 1.563em;
        }

        .featured-project .description {
          font-size: 1em;
        }

        /* Regular projects mobile - stack vertically */
        section:last-child li > a {
          flex-direction: column;
          min-height: auto;
        }

        section:last-child .project-image {
          width: 100%;
          height: 200px;
        }

        section:last-child .project-content {
          padding: 1.25rem;
        }

        section:last-child .title {
          font-size: 1.25em;
        }

        .tags,
        .tech-stack {
          gap: 0.4rem;
        }

        .tag,
        .tech-item {
          font-size: 0.7rem;
          padding: 0.2rem 0.6rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      {
        featuredProject && (
          <section>
            <ul>
              <li class="featured-project">
                <a href={`/projects/${featuredProject.id}/`}>
                  {featuredProject.data.heroImage && (
                    <div class="project-image">
                      <Image
                        width={960}
                        height={400}
                        src={featuredProject.data.heroImage}
                        alt={featuredProject.data.title}
                      />
                    </div>
                  )}
                  <div class="project-content">
                    <p class="date">
                      <FormattedDate date={featuredProject.data.pubDate} />
                    </p>
                    <div class="project-header">
                      <h3 class="title">
                        {featuredProject.data.title}
                        {featuredProject.data.url && (
                          <span class="external-link-icon">â†—</span>
                        )}
                      </h3>
                      <span class="featured-badge">Featured</span>
                    </div>
                    <p class="description">
                      {featuredProject.data.description}
                    </p>
                    {featuredProject.data.tags.length > 0 && (
                      <div class="tags">
                        {featuredProject.data.tags.map((tag) => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    )}
                    {featuredProject.data.techStack.length > 0 && (
                      <div class="tech-stack">
                        {featuredProject.data.techStack.map((tech) => (
                          <span class="tech-item">{tech}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </li>
            </ul>
          </section>
        )
      }

      {
        regularProjects.length > 0 && (
          <section>
            <h2 class="section-title">All Projects</h2>
            <ul>
              {regularProjects.map((project) => (
                <li>
                  <a href={`/projects/${project.id}/`}>
                    {project.data.heroImage && (
                      <div class="project-image">
                        <Image
                          width={480}
                          height={320}
                          src={project.data.heroImage}
                          alt={project.data.title}
                        />
                      </div>
                    )}
                    <div class="project-content">
                      <p class="date">
                        <FormattedDate date={project.data.pubDate} />
                      </p>
                      <div class="project-header">
                        <h3 class="title">
                          {project.data.title}
                          {project.data.url && (
                            <span class="external-link-icon">â†—</span>
                          )}
                        </h3>
                      </div>
                      <p class="description">{project.data.description}</p>
                      {project.data.tags.length > 0 && (
                        <div class="tags">
                          {project.data.tags.map((tag) => (
                            <span class="tag">{tag}</span>
                          ))}
                        </div>
                      )}
                      {project.data.techStack.length > 0 && (
                        <div class="tech-stack">
                          {project.data.techStack.map((tech) => (
                            <span class="tech-item">{tech}</span>
                          ))}
                        </div>
                      )}
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>
